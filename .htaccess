# Handle redirects to backend/public
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # If the request is not for an existing file or directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirect all requests to backend/public
    RewriteRule ^(.*)$ backend/public/$1 [L]
</IfModule>
